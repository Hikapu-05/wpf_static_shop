<Window x:Class="StaticShop._0._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StaticShop._0._2"
        mc:Ignorable="d"
        Title="MainWindow" Width="1920" Height="1080"  Background="{DynamicResource FON}" ResizeMode="CanMinimize" WindowState="Maximized">
    <Window.Resources>
        
        

        <LinearGradientBrush x:Key="FON" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="White" Offset="0.04"/>
            <GradientStop Color="Violet" Offset="0.046"/>

            <GradientStop Color="BlueViolet" Offset="0.6"/>
            <GradientStop Color="Purple" Offset="0.75"/>

        </LinearGradientBrush>

        <Style TargetType="Button" x:Key="BTN">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" CornerRadius="30" Background="#350a40">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Violet"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGridColumnHeader" >
            <Setter Property="Margin" Value="0,0,100,0"/>
            <Setter Property="Background" Value="#350a40"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#350a40"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridRowHeader">
            <Setter Property="Background" Value="#350a40"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#350a40"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#350a40"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#350a40"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem" x:Key="tabItemStyle">
            <Setter Property="Background" Value="#350a40"/>
            <Setter Property="BorderBrush" Value="#350a40"/>

            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#350a40"/>
                    <Setter Property="BorderBrush" Value="#350a40"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#350a40"/>
                    <Setter Property="BorderBrush" Value="#350a40"/>
                </Trigger>
            </Style.Triggers>
            
        </Style>
        
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Border Background="{DynamicResource FON}" CornerRadius="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="50" Height="50"  HorizontalAlignment="Left" Margin="16,0,0,5">
                    <Image Source="C:\Users\student\Downloads\3916688.png"/>
                </Border>
                <TextBlock Grid.Column="1" Text="StaticShop" FontSize="49" Margin="0,0,0,5" FontWeight="Bold" FontFamily="COMIC SANS MS" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Balance:" FontSize="45" TextAlignment="Center" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="23,0,0,66"/>
                <TextBlock x:Name="balance" Grid.Column="2" Height="30" Margin="23,122,98,25" FontSize="20" />
                <TextBlock Grid.Column="3" Text="User name:" FontSize="45" TextAlignment="Center" FontWeight="DemiBold" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="38,0,0,66" RenderTransformOrigin="0.368,-0.423"/>
                <TextBlock x:Name="Username" Grid.Column="3" FontSize="20" Height="30" Margin="38,122,39,25"/>
            </Grid>
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5"  Direction="320"/>
            </Border.Effect>
        </Border>
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" CornerRadius="15" Background="#350a40" Opacity="0.85">
                <StackPanel>
                    <Button Content="Каталог" Style="{StaticResource BTN}" Margin="30" Click="Button_Click_4"/>
                    <Button Content="Корзина" Style="{StaticResource BTN}" Margin="30" Click="Button_Click_5"/>
                    <Button Content="Избранное" Style="{StaticResource BTN}" Margin="30" Click="Button_Click_6"/>
                    <Button Content="История" Style="{StaticResource BTN}" Margin="30" Click="Button_Click_7"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="3" CornerRadius="15" Background="#350a40" Opacity="0.85">
                <TabControl Margin="15" Background="#350a40" BorderThickness="0" x:Name="TabControl" SelectionChanged="TabControl_SelectionChanged">
                    
                    
                    
                    
                    
                    <TabItem Style="{DynamicResource tabItemStyle}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <StackPanel  Grid.Row="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="Searchtext" Width="850" Height="50" Margin="10" FontSize="25"/>
                                    <Button Content="Найти"  Style="{DynamicResource ResourceKey=BTN}" Width="152" Height="94" Margin="70,0,0,0" Foreground="White" Click="Button_Click" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Цена от:" Foreground="White" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBox x:Name="Ot" Width="200" Height="50" Margin="20,0,0,0" FontSize="25" />
                                    <TextBlock Text="до:" Foreground="White" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                    <TextBox x:Name="Do" Width="200" Height="50" Margin="20,0,0,0" FontSize="25"/>
                                    <Button Content="Применить фильтр" Style="{DynamicResource BTN}" Foreground="White" Margin="210,0,0,0" Click="Button_Click_1"/>
                                </StackPanel>
                                <GroupBox Header="Категория" FontSize="30" Foreground="White" Margin="0,5,0,5">
                                    <ScrollViewer Height="150">
                                        <ItemsControl x:Name="CategoryList">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content ="{Binding Name}" IsChecked ="{Binding isChecked, Mode=TwoWay}" Margin="5" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </GroupBox>
                            </StackPanel>
                            <DataGrid x:Name="ProductGrid" Grid.Row="1" Margin="0,7,0,0"  ItemsSource="{Binding catalog}" SelectedItem="{Binding SelectedCatalogItem}" IsReadOnly="True" AutoGenerateColumns="False" Background="#350a40"> 
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                                    <DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}"/>
                                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                    <DataGridTextColumn Header="Описание" Binding="{Binding Descrption}"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>

                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Background="#350a40" Content="Добавить в корзину" Style="{DynamicResource BTN}" Foreground="White" Click="Button_Click_2"/>
                                <Button Grid.Column="1" Background="#350a40" Content="Добавить в избранное" Style="{DynamicResource BTN}" Foreground="White" Click="Button_Click_3"/>
                            </Grid>
                           
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource tabItemStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <DataGrid Grid.Row="0" x:Name="CartGrid" Margin="0,7,0,0"   IsReadOnly="True" AutoGenerateColumns="False" Background="#350a40">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" Binding="{Binding Product.Name}"/>
                                    <DataGridTextColumn Header="Категория" Binding="{Binding Product.Category.Name}"/>
                                    <DataGridTextColumn Header="Цена" Binding="{Binding Product.Price}"/>
                                    <DataGridTextColumn Header="Описание" Binding="{Binding Product.Descrption}"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding  Quantity}"/>
                                    
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Background="#350a40" Content="Удалить" Style="{DynamicResource BTN}" Foreground="White" Click="Remove"/>
                                <Button x:Name="Buy" Grid.Column="1" Background="#350a40" Content="Оформить заказ" Style="{DynamicResource BTN}" Foreground="White" Click="Buy_Click" />
                            </Grid>
                            
                        </Grid>
                        
                    </TabItem>
                    <TabItem Style="{DynamicResource tabItemStyle}">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <DataGrid Grid.Row="0" x:Name="FavoriteGrid" Margin="0,7,0,0"   IsReadOnly="True" AutoGenerateColumns="False" Background="#350a40">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Название" Binding="{Binding Product.Name}"/>
                                    <DataGridTextColumn Header="Категория" Binding="{Binding Product.Category.Name}"/>
                                    <DataGridTextColumn Header="Цена" Binding="{Binding Product.Price}"/>
                                    <DataGridTextColumn Header="Описание" Binding="{Binding Product.Descrption}"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
                                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Background="#350a40" Content="Удалить избранное" Style="{DynamicResource BTN}" Foreground="White" Click="Button_Click_8" />
                                <Button Grid.Column="1" Background="#350a40" Content="Добавить" Style="{DynamicResource BTN}" Foreground="White" Click="Button_Click_9"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Style="{DynamicResource tabItemStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <DataGrid Grid.Row="0" x:Name="HistoryGrid" Margin="0,7,0,0"   IsReadOnly="True" AutoGenerateColumns="False" Background="#350a40">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Номер заказа" Binding="{Binding Order.Id}" />
                                    <DataGridTextColumn Header="Дата заказа" Binding="{Binding Order.OrderDate}" />
                                    <DataGridTextColumn Header="Статус" Binding="{Binding Order.Status}"/>
                                    <DataGridTextColumn Header="Название товара" Binding="{Binding Product.Name}"/>
                                    <DataGridTextColumn Header="Категория" Binding="{Binding Product.Category.Name}"/>
                                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                    <DataGridTextColumn Header="Описание" Binding="{Binding Product.Descrption}"/>
                                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}"/>
                                    <DataGridTextColumn Header="Стоимость" Binding="{Binding Order.Cost}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                                
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

    </Grid>
</Window>

